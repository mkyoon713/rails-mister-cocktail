<div class="banner" style="background-image: url('<%= cl_image_path @cocktail.photo %>')">
  <h1 class="text-center transparent-white"><%= @cocktail.name %></h1>
</div>

<div class="cards_container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <div class="overall_container card">
        <div class="content_container">
          <h3 class>The Story</h3>
          <p><%= @cocktail.description %></p>
        </div>
        <div class="foot">
          <p>
            <%= link_to 'Delete story', cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
          </p>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <div class="overall_container card">
        <div class="content_container">
          <h3 class>The characters</h3>
          <ul>
          <% @cocktail.ingredients.each do |ingredient| %>
            <li>
            <% ingredient.doses.each do |dose| %>
            <%= ingredient.name %> (<%= dose.description %>)
            &emsp;
            <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
            <% end %>
            </li>
          <% end %>
          </ul>
        </div>
        <div class="foot">
          <p>
            <%= link_to 'Add new character', new_cocktail_dose_path(@cocktail) %>
          </p>
        </div>
      </div>
    </div>

  </div>
</div>
